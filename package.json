{
  "name": "shortlinker",
  "version": "1.0.0",
  "description": "MERN Stack URL Shorner Application",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "format": "prettier --write --check \"**/*.{js,json,md}\"\n",
    "format:check": "prettier --check \"**/*.{js,json,md}\"\n"
